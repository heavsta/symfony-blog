{% extends 'base.html.twig' %}

{% block title %}{{article.titre}}{% endblock %}

{% block body %}
<div class="container mx-auto flex flex-col items-center justify-center">
    <img src="{{ article.picture }}" class="img-fluid mt-10" alt="Main Article image" width="300" height="200"/>
    <h1 class="font-bold font-mono text-5xl m-10">{{ article.titre }}</h1>
    <p>{{ article.contenu }}</p>
</div>
{% endblock %}

