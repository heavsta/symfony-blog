{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mx-auto mt-20 pt-5 flex flex-col items-center justify-center rounded-2xl">
		{{ form_start(form) }}
		<div class="center bg-indigo-300">
			<div>
				{{ form_row(form.titre) }}
				<div class="nope">
					{{ form_row(form.visible)}}
				</div>
				<div class="text-center text-2xl font-bold bg-green-500 text-white p-2 mt-5">
					{{ form_row(form.save, { 'label': 'Save'})}}
				</div>
			</div>
        </div>
		{{ form_end(form)}}
	</div>
	{% endblock %}
