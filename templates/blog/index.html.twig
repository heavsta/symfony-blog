{% extends 'base.html.twig' %}

{% block title %}Home |
	{{ parent() }}
{% endblock %}

{% block body %}
	{% if articles %}
		<section class="text-gray-600 body-font">
			<div class="container px-5 py-24 mx-auto">
				<div class="flex flex-wrap -m-4">
					{% for article in articles %}
						{% if article.visible %}
							<div class="p-4 md:w-1/3">
								<div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
									<img class="lg:h-48 md:h-36 w-full object-fit object-contain object-center" src="{{article.picture}}" alt="blog">
									<div class="p-6">
										<h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">{% for categorie in article.categories %}
											{{categorie}}
										{% endfor %}</h2>
										<h1 class="title-font text-lg font-medium text-gray-900 mb-3">{{article.titre}}</h1>
										<p class="leading-relaxed mb-3">{{article.contenu|length > 50 ? article.contenu|slice(0, 50) ~ '...' : article.contenu}}</p>
										<div class="flex items-center flex-wrap ">
											<a href="{{path('articles_show', {id: article.id})}}" class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0 hover:text-blue-700">Learn More
												<svg class="w-4 h-4 ml-2" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
													<path d="M5 12h14"></path>
													<path d="M12 5l7 7-7 7"></path>
												</svg>
											</a>
										</div>
									</div>
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</section>
	{% endif %}
{% endblock %}
